@model RefDef.Web.Models.Book

<h2>Book Details</h2>

<div>
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>ISBN:</strong> @Model.ISBN</p>
    <p><strong>Pages:</strong> @Model.Pages</p>
    <p><strong>Published:</strong> @Model.PublishedDate.ToShortDateString()</p>
    <p><strong>Author:</strong> @Model.Author?.FullName</p>
    <p><strong>Category:</strong> @Model.Category?.Name</p>
    <p><strong>Publisher:</strong> @Model.Publisher?.Name</p>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
