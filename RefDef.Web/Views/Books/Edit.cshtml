@model RefDef.Web.Models.BookFormViewModel

<h2>Edit Book</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Book.Id" />

    <div class="form-group">
        <label asp-for="Book.Title"></label>
        <input asp-for="Book.Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Book.ISBN"></label>
        <input asp-for="Book.ISBN" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Book.Pages"></label>
        <input asp-for="Book.Pages" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Book.PublishedDate"></label>
        <input asp-for="Book.PublishedDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Book.AuthorId"></label>
        <select asp-for="Book.AuthorId" asp-items="@(new SelectList(Model.Authors, "Id", "FullName"))" class="form-control">
            <option value="">-- Select Author --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Book.CategoryId"></label>
        <select asp-for="Book.CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" class="form-control">
            <option value="">-- Select Category --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Book.PublisherId"></label>
        <select asp-for="Book.PublisherId" asp-items="@(new SelectList(Model.Publishers, "Id", "Name"))" class="form-control">
            <option value="">-- Select Publisher --</option>
        </select>
    </div>

    <button type="submit">Save</button>
    <a asp-action="Index">Cancel</a>
</form>